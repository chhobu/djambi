{% if html -%}
  <span class="djambi-piece-name djambi-piece-name--type-{{ piece.description.type }} is-{{ piece.faction.class }}-origin is-{{ piece.faction.control.class }}-side">
{% endif %}
{% if display_dead_name == false and piece.isAlive() == false -%}
  {{- 'a dead piece'|t -}}
{% elseif piece.description.num is empty -%}
  {{- '@side @piece'|t({ '@side': piece.faction.name, '@piece': piece.description.genericName }) -}}
{% else -%}
  {{- '@side @piece #@num'|t({ '@side': piece.faction.name, '@piece': piece.description.genericName, '@num': piece.description.num }) -}}
{% endif %}
{% if html -%}
  </span>
{% endif %}